<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE xml>

<?xdevuiml version="1.0"?>
<?template BROWSER_WSXGA?>
<?import com.xdev.ui.XdevPanel?>
<?import com.xdev.ui.XdevVerticalLayout?>
<?import com.xdev.ui.XdevView?>
<XdevView xmlns:x="http://xml.xdev-software.com/xdevuiml" x:name="WndExternalFileDragDrop">
    <x:constraints zpos="0" width="100%" height="100%" />
    <XdevPanel x:name="panel">
        <x:constraints zpos="0" width="100%" height="100%" />
        <XdevVerticalLayout x:name="verticalLayout">
            <x:constraints zpos="0" width="100%" height="100%" />
            <XdevPanel caption="Drop your files here for upload" styleName="shadowed" x:name="dragDropPanel">
                <x:constraints weighty="0.0" width="600px" height="200px" />
            </XdevPanel>
        </XdevVerticalLayout>
    </XdevPanel>
</XdevView>

